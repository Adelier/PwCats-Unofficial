<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_node_layout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">

    <LinearLayout
        android:id="@+id/catNameLayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="50"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textCatTitle"
            android:layout_gravity="center"
            android:textColor="#ffffa54b"
            android:textSize="11sp"
            android:textIsSelectable="false"
            android:gravity="center"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textCatNickname"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            android:textIsSelectable="false"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationLayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="15"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:id="@+id/textLocationName"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textLocationCoordinates"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemCostLayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="25"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:id="@+id/textItemCostLo"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:textColor="#ffff4928"
            android:gravity="center_vertical|right"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textItemCostHi"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:textColor="#ff43c9ff"
            android:gravity="center_vertical|left"/>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textItemCount"
        android:layout_gravity="center_horizontal"
        android:textSize="13sp"
        android:layout_weight="10"
        android:gravity="center"/>

</LinearLayout>